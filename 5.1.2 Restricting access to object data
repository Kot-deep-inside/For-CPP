#include <iostream>
#include <string>
using namespace std;
class Square
{
private:
    double side;
	double area;
public:
	Square(double side);
double	getSide() {
		return side;
	}
double	getArea() {
	return area;
	}
void setSide(double side) {
	if (side > 0) {
		this->side = side;
		this->area = side * side;
	}
}
void setArea(double area) { this->area = area; }
};
Square::Square(double side)
{
	this->side = side;
	this->area = side * side;
}
void print(Square* square)
{
	cout << "Square: side=" << square->getSide() << " area=" << square->getArea() << endl;
}
int main()
{
	Square s(4);
	print(&s);
	s.setSide(2.0);
	print(&s);
	s.setSide(-33.0);
	print(&s);
		return 0;
}
